# .editorconfig
# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.

# Root filesystem
root = true

[*] # Apply to all files
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.java] # Apply to Java files
indent_size = 4
# tab_width = 4
# curly_bracket_next_line = true

[*.gradle] # Apply to Gradle build scripts
indent_size = 4

[*.md] # Apply to Markdown files
trim_trailing_whitespace = false // Often desired for markdown line breaks
